<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dodhackathon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.dodhackathon.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.dodhackathon.ActivityActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.example.dodhackathon.MainActivity"
            android:label="@string/app_name"
            android:alwaysRetainTaskState="True" 
            android:screenOrientation="portrait"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name="com.example.dodhackathon.MenuListActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">

            <!-- android:theme="@android:style/Theme.Black" -->

        </activity>
        <activity
            android:name="com.example.dodhackathon.MenuActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">

            <!-- android:theme="@android:style/Theme.Black" -->
        </activity>
        
        <activity
            android:name="com.example.dodhackathon.mealActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        
                <activity
            android:name="com.example.dodhackathon.loginActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:name="com.example.dodhackathon.login"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>